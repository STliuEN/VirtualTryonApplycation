<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/p2"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/zhutise"
        app:navigationIcon="@mipmap/logo2"
        app:titleTextColor="@color/black"
        app:titleMarginStart="100dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="340dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:layout_gravity="bottom"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_beside"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:baselineAligned="false"
                    android:scaleType="fitXY"
                    android:src="@drawable/tiantub" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="当前搭配"
                    android:textAlignment="center"
                    android:textSize="10sp" />
            </LinearLayout>


            <ImageView
                android:id="@+id/image_main"
                android:layout_width="220dp"
                android:layout_height="301dp"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"

                android:scaleType="fitCenter"
                android:src="@drawable/image_default" />

            <LinearLayout
                android:layout_width="73dp"
                android:layout_height="307dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_save"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="28dp"
                    android:background="@drawable/buttyy"
                    android:text="保存"
                    android:textColor="@color/ziti"
                    android:textStyle="bold"
                    android:textSize="13dp" />

                <Button
                    android:id="@+id/btn_collection"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/buttyy"
                    android:text="收藏"
                    android:textColor="@color/ziti"
                    android:textStyle="bold"
                    android:textSize="13dp" />

                <Button
                    android:id="@+id/btn_back"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/buttyy"
                    android:text="撤销"
                    android:textColor="@color/ziti"
                    android:textStyle="bold"
                    android:textSize="13dp" />

                <Button
                    android:id="@+id/btn_clear"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/buttyy"
                    android:text="清除"
                    android:textColor="@color/ziti"
                    android:textStyle="bold"
                    android:textSize="13dp" />


            </LinearLayout>


        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/gridLayout"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="1dp"
            android:columnCount="2"
            android:gravity="center"
            android:orientation="horizontal"
            android:rowCount="2">


            <Button
                android:id="@+id/btn_uploading"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="21dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="21dp"
                android:background="@drawable/buttonyuan"
                android:text="上  传  形  象"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btn_recycle2"
                android:layout_width="162dp"
                android:layout_height="42dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/buttyy"
                android:text="我 的"
                android:textColor="@color/zhutise"
                android:textStyle="bold"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/btn_recycle1" />

            <Button
                android:id="@+id/btn_recycle1"
                android:layout_width="166dp"
                android:layout_height="42dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/buttyy"
                android:text="推 荐"
                android:textSize="15sp"
                android:textColor="@color/zhutise"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btn_recycle2"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycleView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="50dp"
            android:visibility="visible"
            />
        <GridLayout
            android:id="@+id/gridLayout_mine_iamge"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="50dp"
            android:visibility="gone"
            android:orientation="horizontal"
            android:rowCount="2"
            android:columnCount="4">
            <ImageView
                android:id="@+id/imageView_Mine_1"
                android:src="@drawable/pixmap_upload"
                android:layout_width="70dp"
                android:layout_height="90dp"
                android:scaleType="fitXY"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />
            <ImageView
                android:id="@+id/imageView_Mine_2"
                android:src="@drawable/pixmap_upload"
                android:layout_width="70dp"
                android:layout_height="90dp"
                android:scaleType="fitXY"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />
            <ImageView
                android:id="@+id/imageView_Mine_3"
                android:src="@drawable/pixmap_upload"
                android:layout_width="70dp"
                android:layout_height="90dp"
                android:scaleType="fitXY"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />
            <ImageView
                android:id="@+id/imageView_Mine_4"
                android:src="@drawable/pixmap_upload"
                android:layout_width="70dp"
                android:layout_height="90dp"
                android:scaleType="fitXY"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />
            <ImageView
                android:id="@+id/imageView_Mine_5"
                android:src="@drawable/pixmap_upload"
                android:layout_width="70dp"
                android:layout_height="90dp"
                android:scaleType="fitXY"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                />
            <ImageView
                android:id="@+id/imageView_Mine_6"
                android:src="@drawable/pixmap_upload"
                android:layout_width="70dp"
                android:layout_height="90dp"
                android:scaleType="fitXY"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                />
            <ImageView
                android:id="@+id/imageView_Mine_7"
                android:src="@drawable/pixmap_upload"
                android:layout_width="70dp"
                android:layout_height="90dp"
                android:scaleType="fitXY"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                />
            <ImageView
                android:id="@+id/imageView_Mine_8"
                android:src="@drawable/pixmap_upload"
                android:layout_width="70dp"
                android:layout_height="90dp"
                android:scaleType="fitXY"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                />


        </GridLayout>

    </LinearLayout>


</LinearLayout>